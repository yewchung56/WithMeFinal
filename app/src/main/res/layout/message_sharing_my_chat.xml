<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/message_my_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="@font/kr_font"
        android:includeFontPadding="false"
        android:letterSpacing="-0.03"
        android:text="오후 02:30"
        android:textColor="#BBBBBB"
        android:textFontWeight="400"
        android:textSize="10sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/message_my_chat_contents"
        app:layout_constraintBottom_toBottomOf="@id/message_my_chat_contents" />

    <TextView
        android:id="@+id/message_my_chat_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/message_my_box"
        android:fontFamily="@font/kr_font"
        android:gravity="center"
        android:letterSpacing="-0.03"
        android:text="입력"
        android:textColor="#373839"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>